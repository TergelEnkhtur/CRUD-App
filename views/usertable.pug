doctype html

script.
  const deleteRecord = function(crud_user_id) {
    var url = "/usertable/" + crud_user_id
    fetch(url, {
        method: 'DELETE',
        body: JSON.stringify({
            _method: 'DELETE'
        })
    })
    .then((response) => {
        console.log('reload')
        location.reload() // Reloads the current page
    })
  }

