doctype html

script.
  function matchPassword() {
    var pw1 = document.getElementById('passwordInput').value;
    var pw2 = document.getElementById('passwordInputRepeat').value;
      if(pw1 != pw2)
      {
        alert("Passwords did not match");
        return false;
      } else {
        alert("Password created successfully");
        return true;
      }
  }

html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    title Sign Up Form
  body
    .container-fluid.py-3
      h1.text-center Sign up here!
      p.text-center Fill out all the information below
    .container-fluid.w-50
      .card.p-5
        h3.card-title.text-center Create an Account
        form(action='/register' method='post' name='registerForm')
          .form-group
            label(for='nameInput') Full Name: 
            input#nameInput.form-control.mb-2(type='text' placeholder='Enter Full Name' name='fullname')
          .form-group
            label(for='usernameInput') Username: 
            input#usernameInput.form-control.mb-2(type='text' placeholder='Enter username' name='username')
          .form-group
            label(for='passwordInput') Password: 
            input#passwordInput.form-control.mb-2(type='password' placeholder='Enter password' name='password')
          .form-group
            label(for='passwordInputRepeat') Re-Enter Password: 
            input#passwordInputRepeat.form-control.mb-3(type='password' placeholder='Re-enter password' name='repassword')
          .container.text-center
            button.btn.btn-primary(type='submit', onclick="return matchPassword()") Submit
            a.btn.btn-secondary(href='/') Return to Start Page
    // Option 1: Bootstrap Bundle with Popper
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
