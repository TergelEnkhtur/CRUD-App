doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    title Edit Book Form
  body
    h1.text-center.m-3 Edit Book
    .container
      form(action='/booktable/#{book.id}' method='post' name='edit')
        .form-group
          label(for='book_title') Book Title
          input#book_title.form-control(type='text' placeholder='Book Title' name='book_title')
        .form-group
          label(for='author_name') Author
          input#author_name.form-control(type='text' placeholder="Author's name" name='author_name')
        .form-group
          label(for='genre') Genre
          input#genre.form-control(type='text' placeholder="Book's genre" name='genre')
        .form-group
          label(for='isbn') ISBN Number
          input#isbn.form-control(type='text' placeholder='Enter ISBN' name='isbn')
          small#isbnHelp.form-text.text-muted Ex: 978-3-16-148410-0
        .form-group
          label(for='books_available') Books Quantity Donated
          input#books_available.form-control.mb-4(type='text' placeholder='Enter quantity' name='books_available')
        .container.text-center
          button#saveModalButton.btn.btn-primary(type='submit') Save changes
          a.btn.btn-secondary(href='/booktable') Close
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
