doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    title Library Catalog
  body
    h3.text-center.my-3 Search for Book - Patrons
    // Search Bar
    .row
      .col-8.col-md-push-1
        .container
          .row
            .col-xs-8.col-xs-offset-2
              form#searchForm.input-group.mb-3(action='#', method='get')
                .input-group-btn.search-panel
                  select#search_param.btn.btn-default.dropdown-toggle(name='search_param', data-toggle='dropdown')
                    option(value='title') Book Title
                    option(value='isbn') ISBN #
                    option(value='author') Author
                    option(value='genre') Genre
                input.form-control.mx-3.mb-3(type='text', name='x', placeholder='Search term...')
                span.input-group-btn
                  button.btn.btn-outline-dark(type='submit')
                    svg.bi.bi-search(xmlns='http://www.w3.org/2000/svg', width='16', height='16', fill='currentColor', viewBox='0 0 16 16')
                      path(d='M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z')
    // Table
    .container
      table#bookTable.table.table-bordered.text-center.px-5
        thead
          tr
            th(scope='col') Book ID
            th(scope='col') Book Title
            th(scope='col') Author
            th(scope='col') Genre
            th(scope='col') ISBN #
            th(scope='col') Books Available
            th(scope='col')
        tbody
          tr
            td#row1(scope='row') 1
            td Hello World!
            td John Doe
            td Fiction
            td 978-3-16-148410-0
            td 5
            td
              button.btn.btn-success Checkout this book
      script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
      script(src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
