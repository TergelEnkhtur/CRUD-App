doctype html

script.
  const deleteRecord = function(crud_reservations_id) {
    var url = "/rented_books/" + crud_reservations_id
    fetch(url, {
        method: 'DELETE',
        body: JSON.stringify({
            _method: 'DELETE'
        })
    })
    .then((response) => {
        console.log('reload')
        location.reload() // Reloads the current page
    })
  }

html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    // CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    title Rented Books
  body
    h3.text-center.my-3 Rented Books
    // Search Bar
    .row
      .col-8.col-md-push-1
        .container
          .row
            .col-xs-8.col-xs-offset-2
              form#searchForm.input-group.mb-3(action='/rented_books' method='get')
                .input-group-btn.search-panel
                  select#search_param2.btn.btn-default.dropdown-toggle(name='search_param2' data-toggle='dropdown')
                    option(value='fullname') Search By Full Name
                    option(value='username') Search By Username
                    option(value='book_title') Search By Book Title
                    option(value='author_name') Search By Author Name
                    option(value='genre') Search By Genre
                    option(value='isbn') Search By ISBN #
                input.form-control.mx-3.mb-3(type='text' name='searchTerm2' placeholder='Search term...')
                span.input-group-btn
                  button.btn.btn-outline-dark(type='submit')
                    svg.bi.bi-search(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16')
                      path(d='M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z')
    // Table
    .container
      table#bookTable.table.table-bordered.text-center
        thead
          tr
            th(scope='col') User ID
            th(scope='col') Full Name
            th(scope='col') Username
            th(scope='col') Book Title
            th(scope='col') Author Name
            th(scope='col') Genre
            th(scope='col') ISBN
            th(scope='col') Edit/Delete
        tbody
          each crudRentedBook in crudRentedBooks
            tr
              td #{crudRentedBook.id}
              td #{crudRentedBook.fullname}
              td #{crudRentedBook.username}
              td #{crudRentedBook.book_title}
              td #{crudRentedBook.author_name}
              td #{crudRentedBook.genre}
              td #{crudRentedBook.isbn}
              td 
                a(href='/rented_books/' + crudRentedBook.book_id)
                  svg.bi.bi-pencil-square(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16')
                        path(d='M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z')
                        path(fill-rule='evenodd' d='M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z')
                button(onclick=`deleteRecord(${crudRentedBook.book_id})`) Delete                      
    a.btn.btn-secondary(href='/booktable_patron')
      svg.bi.bi-book(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16')
        path(d='M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z')
